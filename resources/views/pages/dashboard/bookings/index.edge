@layout('layouts/main')

@set('title', 'Mes réservations - Hypnos')

@section('content')
  <div x-data="modal">
    @include('partials/dashboard/nav')
  
    @if(bookings.length)
      <table class="mb-10 w-full text-gray-600 table-auto">
        <tbody>
